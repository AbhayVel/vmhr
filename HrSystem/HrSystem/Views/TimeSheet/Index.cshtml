@model IEnumerable<HREntity.TimeSheet>

@{
    ViewData["Title"] = "Index";
    
}

<h1>Index</h1>

@{
        var timeSheetModel = ViewBag.Model as TimeSheetModel;
        var pageModel = timeSheetModel.PageModel;
    }

<p>
    <a asp-action="Create">Create New</a>
</p>

<form action="~/TimeSheet/Index" method="post">
 
<div class="row">
<div class="col-6">
<div class="form-group">
<lable for="Id">Id:</lable>
<input type="text" class="form-control" value = "@timeSheetModel.IdSearch"  name="IdSearch" id="IdSearch"/>

</div>

</div>
<div class="col-6">
<div class="form-group">
<lable for="Name">Name</lable>
<input type="text" class="form-control" value = "@timeSheetModel.TextDataSearch"  name="TextDataSearch" id="TextDataSearch"/>

</div>

</div>
</div>

<input type="hidden" name="OrderBy" id="orderBy" value="@timeSheetModel.OrderBy" />
<input type="hidden" name="ColumnName" id="columnName" value="@timeSheetModel.ColumnName" />
<input type="hidden" name="pageModel.currentPage" id="currentPage" value="@pageModel.CurrentPage" />
<button type="submit"  id="btnsub">Search</button>

</form>


        <div class="container">
<table id="example" class="table table-striped table-bordered" style="width:100%">
    <thead>
        <tr> 
             <th>
              <a onclick="sort('@timeSheetModel.ColumnName','@timeSheetModel.OrderBy')"> @Html.DisplayNameFor(model => model.Id)</a>
            </th>
            <th>
                 <a onclick="sort('@timeSheetModel.ColumnName','@timeSheetModel.OrderBy')"> @Html.DisplayNameFor(model => model.TextData)</a>
            </th>
            <th>
              <a href="~/timeSheet/Index?ColumnName=ShortNotes&OrderType=@timeSheetModel.OrderBy"> @Html.DisplayNameFor(model => model.ShortNotes)</a>
            </th>
            <th>
              <a href="~/timeSheet/Index?ColumnName=TimeSpend&OrderType=@timeSheetModel.OrderBy"> @Html.DisplayNameFor(model => model.TimeSpend)</a>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TextData)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ShortNotes)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TimeSpend)
            </td>
            <td>
                 <a href="~/Users/Edit/@item.Id"> <button type="button" class="btn btn-warning">Edit</button> </a>
                  <a href="~/TimeSheet/Delete/@item.Id">
                 <button type="button" class="btn btn-danger">Delete</button></a>
            </td>
        </tr>
}
    </tbody>
</table>

<div class="row">
        <div class="col-sm-12 col-md-5">
            <div class="dataTables_info" id="example_info" role="status" aria-live="polite">
                Showing <span>@(pageModel.StartIndex +1)</span> to <span>@(pageModel.EndIndex +1)</span> of <span>@pageModel.TotalRowCount</span> entries
            </div>
        </div><div class="col-sm-12 col-md-7">
            <div class="dataTables_paginate paging_simple_numbers" id="example_paginate">
                <ul class="pagination">
                    <li class="paginate_button page-item previous" id="example_previous"><a href="#" aria-controls="example" data-dt-idx="0" tabindex="0" class="page-link">Previous</a></li>

                    @for (int i = 1; i <= pageModel.PageCount; i = i + 1)
                    {
                        if (i == pageModel.CurrentPage)
                        {
                            <li class="paginate_button page-item active"><a onclick="pageChange('@i')" href="/applications/index?currentPage=@i" aria-controls="example" data-dt-idx="1" tabindex="0" class="page-link">@i</a></li>

                        }
                        else
                        {
                            <li class="paginate_button page-item"><a onclick="pageChange('@i')" href="/applications/index?currentPage=@i" aria-controls="example" data-dt-idx="1" tabindex="0" class="page-link">@i</a></li>

                        }

                    }
                    <li class="paginate_button page-item next disabled" id="example_next"><a href="#" aria-controls="example" data-dt-idx="3" tabindex="0" class="page-link">Next</a></li>
                </ul>
        </div>
        </div>
    </div>
</div>



<script>

    function pageChange(num){
         event.preventDefault();
         debugger;
         document.querySelector("#currentPage").value=num;
         document.querySelector("#btnsub").click();
    }

function sort(columnName,orderBy)
{
    event.preventDefault();
    if(orderBy=='asc')
    {
        orderBy='desc'
    }
    else
    {
        orderBy='asc'
    }
document.querySelector('#orderBy').value=orderBy;
document.querySelector('#columnName').value=columnName;

document.querySelector("#btnsub").click();
}

</script>

}
 

