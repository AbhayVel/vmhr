@model IEnumerable<HREntity.TimeSheet>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

@{
    var timeSheetModel = ViewBag.Model as TimeSheetModel;
}

<p>
    <a asp-action="Create">Create New</a>
</p>

<form action="~/TimeSheet/Index" method="post">
 
<div class="row">
<div class="col-6">
<div class="form-group">
<lable for="Id">Id:</lable>
<input type="text" class="form-control" value = "@timeSheetModel.IdSearch"  name="IdSearch" id="IdSearch"/>

</div>

</div>
<div class="col-6">
<div class="form-group">
<lable for="Name">Name</lable>
<input type="text" class="form-control" value = "@timeSheetModel.TextDataSearch"  name="TextDataSearch" id="TextDataSearch"/>

</div>

</div>
</div>

 
<button type="submit"  id="btnsub">Search</button>

</form>


        <div class="container">
<table id="example" class="table table-striped table-bordered" style="width:100%">
    <thead>
        <tr> 
             <th>
              <a href="~/timeSheet/Index?orderBy=Id&orderType=@timeSheetModel.OrderType"> @Html.DisplayNameFor(model => model.Id)</a>
            </th>
            <th>
                <a href="~/timeSheet/Index?orderBy=TextDataorderType=@timeSheetModel.OrderType"> @Html.DisplayNameFor(model => model.TextData)</a>
            </th>
            <th>
              <a href="~/timeSheet/Index?orderBy=ShortNotes&orderType=@timeSheetModel.OrderType"> @Html.DisplayNameFor(model => model.ShortNotes)</a>
            </th>
            <th>
              <a href="~/timeSheet/Index?orderBy=TimeSpend&orderType=@timeSheetModel.OrderType"> @Html.DisplayNameFor(model => model.TimeSpend)</a>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TextData)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ShortNotes)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TimeSpend)
            </td>
            <td>
                 <a href="~/Users/Edit/@item.Id"> <button type="button" class="btn btn-warning">Edit</button> </a>
                  <a href="~/TimeSheet/Delete/@item.Id">
                 <button type="button" class="btn btn-danger">Delete</button></a>
            </td>
        </tr>
}
    </tbody>
</table>
</div>
}
 

