@model IEnumerable<HREntity.TimeSheet>

    @{
        var timeSheetModel = ViewBag.Model as TimeSheetModel;
        var pageModel = timeSheetModel.PageModel;
    }
 
<table id="example" class="table table-striped table-bordered" style="width:100%">
    <thead>
        <tr> 
             <th>
              <a onclick="sort('@timeSheetModel.ColumnName','@timeSheetModel.OrderBy')"> @Html.DisplayNameFor(model => model.Id)</a>
            </th>
            <th>
                 <a onclick="sort('@timeSheetModel.ColumnName','@timeSheetModel.OrderBy')"> @Html.DisplayNameFor(model => model.UserName)</a>
            </th>
            <th>
              <a onclick="sort('@timeSheetModel.ColumnName','@timeSheetModel.OrderBy')"> @Html.DisplayNameFor(model => model.Heading)</a>
            </th>
            <th>
              <a onclick="sort('@timeSheetModel.ColumnName','@timeSheetModel.OrderBy')"> @Html.DisplayNameFor(model => model.ShortNotes)</a>
            </th>
            <th>
              <a onclick="sort('@timeSheetModel.ColumnName','@timeSheetModel.OrderBy')"> @Html.DisplayNameFor(model => model.TimeSpend)</a>
            </th>
            <th>
              <a onclick="sort('@timeSheetModel.ColumnName','@timeSheetModel.OrderBy')"> @Html.DisplayNameFor(model => model.TaskStartDate)</a>
            </th>
            <th>
              <a onclick="sort('@timeSheetModel.ColumnName','@timeSheetModel.OrderBy')"> @Html.DisplayNameFor(model => model.TaskEndDate)</a>
            </th>
            <th>
              <a onclick="sort('@timeSheetModel.ColumnName','@timeSheetModel.OrderBy')"> @Html.DisplayNameFor(model => model.TaskDate)</a>
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Heading)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ShortNotes)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TimeSpend)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TaskStartDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TaskEndDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TaskDate)
            </td>
            <td>
                 <a href="~/TimeSheet/Edit/@item.Id"> <button type="button" class="btn btn-warning">Edit</button> </a>
                  <a href="~/TimeSheet/Delete/@item.Id">
                 <button type="button" onclick="getAjaxCall()" class="btn btn-danger">Delete</button></a>
            </td>
        </tr>
}
    </tbody>
</table>

